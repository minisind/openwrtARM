# This is an empty file, please overwrite it after generating the .config file with the source code

# 目标设备配置
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_cmcc_rax3000m=y
CONFIG_TARGET_DEVICE_mediatek_filogic_cmcc_rax3000m=y

# 内核和固件支持
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-wo-firmware=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_f2fsck=y
CONFIG_PACKAGE_mkf2fs=y
CONFIG_KERNEL_IN_UBI=y
CONFIG_UBOOTENV_IN_UBI=y

# LuCI 界面
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 网络相关功能
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-vnstat=y
CONFIG_PACKAGE_luci-app-turboacc=y  # 网络加速

# WiFi 驱动和配置
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_kmod-mt_wifi=y
CONFIG_PACKAGE_luci-app-wireless-regdb=y
CONFIG_WIFI_80211AX=y  # 启用 WiFi 6 支持
CONFIG_PACKAGE_hostapd-common=y
CONFIG_PACKAGE_wpa-supplicant=y

# 文件系统和存储
CONFIG_TARGET_ROOTFS_PARTSIZE=104  # 设置分区大小（与 NAND/eMMC 兼容）
CONFIG_IMAGE_SIZE="104m"
CONFIG_TARGET_IMAGES_GZIP=y

# 其他常用设置
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-app-samba4=y  # 文件共享
CONFIG_PACKAGE_luci-app-ttyd=y    # 终端支持
CONFIG_PACKAGE_kmod-nls-utf8=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-f2fs=y

# 禁用不必要的包以节省空间
# CONFIG_PACKAGE_luci-theme-material is not set
# CONFIG_PACKAGE_luci-app-openclash is not set  # OpenClash 占用资源较多，可按需启用
